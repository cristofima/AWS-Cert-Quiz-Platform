# Frontend pnpm Configuration
# This file ensures frontend is NOT part of the Lambda workspace
# Frontend maintains its own independent dependencies

# Disable workspace (don't look for parent pnpm-workspace.yaml)
# This makes frontend independent from the Lambda workspace
link-workspace-packages=false

# Use shamefully-hoist for better compatibility with Next.js
shamefully-hoist=true

# Auto-install peer dependencies
auto-install-peers=true

# Prefer frozen lockfile in production
# frozen-lockfile=true
